# Environment Configuration for Cutlery Classifier MVP
# Copy this file to .env and fill in your specific values

# Project Settings
PROJECT_NAME=cutlery-classifier-mvp
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# Data Paths
DATA_ROOT_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
AUGMENTED_DATA_PATH=./data/augmented

# Model Paths
MODEL_CHECKPOINTS_PATH=./models/checkpoints
MODEL_EXPORTS_PATH=./models/exports
RESULTS_PATH=./results

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=10
NUM_WORKERS=4

# Hardware Configuration
DEVICE=auto
CUDA_VISIBLE_DEVICES=0
MIXED_PRECISION=false

# Logging Configuration
LOG_LEVEL=INFO
TENSORBOARD_LOG_DIR=./logs
SAVE_PLOTS=true

# API Configuration (for future web interface)
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Database Configuration (if needed for experiment tracking)
# DATABASE_URL=sqlite:///experiments.db

# External Services (optional)
# WANDB_API_KEY=your_wandb_api_key_here
# MLFLOW_TRACKING_URI=http://localhost:5000

# Model Export Settings
EXPORT_ONNX=true
EXPORT_TORCHSCRIPT=true
OPTIMIZE_FOR_MOBILE=false

# Inference Settings
CONFIDENCE_THRESHOLD=0.8
TOP_K_PREDICTIONS=3

# Data Collection Settings
IMAGE_SIZE=320
SUPPORTED_FORMATS=jpg,jpeg,png,bmp

# Security (if deploying)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
SAVE_INTERMEDIATE_RESULTS=true 